@model IEnumerable<FitnessCenter.Models.Client>

@{
    ViewData["Title"] = "Клиенты";
}

<h2>Клиенты</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить клиента</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Телефон</th>
            <th>Email</th>
            <th>Регистрация</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.LastName</td>
                <td>@c.FirstName</td>
                <td>@c.Phone</td> <!-- ✅ исправлено Phone вместо PhoneNumber -->
                <td>@c.Email</td>
                <td>@c.RegistrationDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.ClientID" class="btn btn-info btn-sm">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>
