@model FitnessCenter.Models.Visit

@{
    ViewData["Title"] = "Добавить посещение";
}

<h2>Добавить посещение</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ClientID">Клиент</label>
        <select asp-for="ClientID" asp-items="ViewBag.Clients" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="CheckInTime">Время входа</label>
        <input asp-for="CheckInTime" class="form-control" type="datetime-local" />
    </div>

    <div class="form-group">
        <label asp-for="CheckOutTime">Время выхода</label>
        <input asp-for="CheckOutTime" class="form-control" type="datetime-local" />
    </div>

    <div class="mt-3">
        <input type="submit" value="Сохранить" class="btn btn-success" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>
