<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenter</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <header>
            <h1>FitnessCenter</h1>
            <nav>
                <a asp-controller="Home" asp-action="Index">Главная</a> |
                <a asp-controller="Clients" asp-action="Index">Клиенты</a> |
                <a asp-controller="Visits" asp-action="Index">Посещения</a>
            </nav>
            <hr />
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <footer class="border-top pt-3">
            <p>&copy; 2025 - FitnessCenter</p>
        </footer>
    </div>
</body>
</html>
